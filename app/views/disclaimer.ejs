<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <%- include('header') %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <%- include('nav', navigation) %>

  <!-- Age Disclaimer -->
  <section id="disclaimer" class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="contact-wrap w-100 p-lg-5 p-4 text-center">
            <h3 class="mb-4"><%= disclaimer.title %></h3>
            <p class="mb-4"><%= disclaimer.text %></p>

            <form
              action="<%= contextPath %><%= lang %>/disclaimer"
              method="POST"
              id="disclaimerForm"
              name="disclaimerForm"
            >
              <input type="hidden" name="nextUrl" value="<%= nextUrl %>">

              <!-- Enter site button -->
              <button
                type="submit"
                class="button w-100"
                style="height: 100px;"
              >
                <h4 class="m-0"><strong><%= disclaimer.confirm %></strong></h4>
              </button>
            </form>

            <!-- Leave site link below -->
            <div class="mt-4">
              <a
                href="https://tu-dresden.de/bu/wirtschaft/winf/digital-health/die-forschungsgruppe"
                style="color: #50b034; font-weight: bold; text-decoration: underline;"
              >
                <%= disclaimer.leave %>
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('footer') %>
</body>
</html>