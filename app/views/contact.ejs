<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('header') %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="js/contact.js"></script>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>


</head>

<body>
  <%- include('nav', navigation) %>

  <!-- Datadonation guide-->
  <section id="contact" class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <div id="contact-wrap" class="contact-wrap w-100 p-lg-5 p-4">
            <div id="formMessage" class="text-center mt-3" style="display: none;"></div>
            <h3 class="mb-4 text-center" id="send_us">
              <%= contact.send_us %>
            </h3>
            <form id="contactForm" name="contactForm" class="contactForm">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group mb-3">
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      id="name"
                      placeholder=<%=contact.name %>
                    >
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-3">
                    <input
                      type="email"
                      class="form-control"
                      name="email"
                      id="email"
                      placeholder=<%=contact.email %>
                    >
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-3">
                    <input
                      type="text"
                      class="form-control"
                      name="subject"
                      id="subject"
                      placeholder=<%=contact.subject %>
                    >
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-3">
                    <textarea
                      name="message"
                      class="form-control"
                      id="message"
                      cols="30"
                      rows="6"
                      placeholder=<%=contact.message %>
                    ></textarea>
                  </div>
                </div>
                <div class="col-md-12 text-center mb-4 d-flex justify-content-center">
                  <div class="g-recaptcha" data-sitekey="6Lc_WPEpAAAAAFmAbljvtUq2lX3Iekior1r3qr7l"></div>
                </div>
                <div class="col-md-12 text-center">
                  <div class="form-group">
                    <button type="submit" id="submit" class="button">
                      <%= contact.submit %>
                    </button>
                    
                  </div>
                </div>
              </div>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('footer') %>
</body>

</html>